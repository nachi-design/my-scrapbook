---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import "../../styles/global.scss";
import "../../scripts/global.js";
---

<Layout title="お問い合わせ | Nachi web design" description="お問い合わせページです。ご依頼やお見積り、ご質問等はこちらからお問い合わせください。">
  <Header />

  <main>
    <p class="vertical-text">CONTACT</p>
    <div class="container contact">
      <h1 class="page-ttl">お問い合わせ</h1>
      <p class="text-center">
        ご依頼やお見積り、ご質問等はこちらからお問い合わせください。<br />
        土日祝を除く3営業日以内にご返信いたします。
      </p>

      <div class="contact__form-area">
        <form id="contact-form" class="form">
          <dl class="contact__input-wrapper">
            <dt>
              <label for="name">お名前</label>
            </dt>
            <dd>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="鈴木 太郎"
                required
              />
            </dd>
          </dl>

          <dl class="contact__input-wrapper">
            <dt>
              <label for="email">メールアドレス</label>
            </dt>
            <dd>
              <input
                type="email"
                id="email"
                name="email"
                size="50"
                placeholder="sample@mail.com"
                required
              />
            </dd>
          </dl>

          <dl class="contact__input-wrapper">
            <dt>
              <label for="message">お問合せ内容</label>
            </dt>
            <dd>
              <textarea
                id="message"
                name="message"
                rows="5"
                cols="100"
                placeholder="ご質問・お問い合わせ内容を記入ください"
                required></textarea>
            </dd>
          </dl>

          <div class="contact__privacy">
            <input
              type="checkbox"
              id="privacy-policy"
              name="privacy-policy"
              required
            />
            <label for="privacy-policy">
              <p>
                <a href="/privacy-policy" target="_blank"
                  >プライバシーポリシー</a
                >に同意する
              </p>
            </label>
          </div>

          <div class="text-center">
            <button class="contact__submit" type="submit">送信する</button>
          </div>
        </form>
        <p id="status-message" class="status-message"></p>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");
    const statusMessage = document.getElementById("status-message");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      const formData = new FormData(form);
      const response = await fetch("https://formspree.io/f/mjkybpjq", {
        method: "POST",
        body: formData,
        headers: { Accept: "application/json" },
      });

      if (response.ok) {
        statusMessage.textContent = "送信が成功しました！";
        statusMessage.style.color = "green";
        form.reset();
      } else {
        statusMessage.textContent = "送信に失敗しました。";
        statusMessage.style.color = "red";
      }
    });
  });
</script>

<style lang="scss">
  @use "../../styles/variables" as *;

  .contact {
    max-width: 800px;

    &__form-area {
      background: $white;
      padding: 5rem;
      margin-top: 3rem;

      @include mq-max(sm)  {
        padding: 3rem;
      }
    }

    &__input-wrapper {
      @include flex(nowrap, left, flex-start);
      gap: 2rem;
      margin-bottom: 2rem;

      dt {
        font-size: 1.6rem;
        font-weight: bold;
        min-width: 120px;
      }

      dd {
        input,textarea {
          width: 100%;
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 5px;
          font-size: 16px;
          box-sizing: border-box;
        }
      }

      @include mq-max(sm) {
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 3rem;
      }
    }

    &__privacy {
      @include flex(nowrap, center, center);
      margin-bottom: 3rem;

      a {
        color: #87D500;
        text-decoration: underline;
      }
    }

    &__submit {
      background: $yellow-green;
      font-family: inherit;
      font-size: 1.6rem;
      border: none;
      border-radius: 50px;
      padding: 1rem 3rem;
      cursor: pointer;
      @include transition;

      &:hover {
        background: $black;
        color: $white;
      }
    }
  }


  .status-message {
    text-align: center;
    margin-top: 10px;
    font-size: 14px;
  }
</style>
