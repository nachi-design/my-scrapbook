---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import WorksDetail from "../../../components/Works-detail.astro";
import "../../../styles/global.scss";
import "../../../styles/works.scss";
import "../../../scripts/global.js";
---

<Layout title="制作実績詳細 | Nachi web design" description="制作実績の詳細ページです。">
  <Header />
  <main>
    <WorksDetail>
      <!-- スライダー -->
      <div slot="slides" class="swiper-wrapper">
        <img src="/images/works/banner-7/img1.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-7/img2.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-7/img3.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-7/img4.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
      </div>

      <!-- 情報 -->
      <div slot="text">
        <h1 class="works-detail__title">注文住宅 Web広告用バナー</h1>
        <div class="works-detail__tags">
          <!-- <p>Webデザイン</p> -->
          <!-- <p>LPデザイン</p> -->
          <!-- <p>コーディング</p> -->
          <p>バナー</p>
          <!-- <p>印刷物</p> -->
        </div>
        <div class="works-detail__description">
          <p>工務店のWeb広告用バナーを作成しました。<br>
            セミオーダーの規格住宅でコストパフォーマンスの高さが魅力のため、価格を目立たせつつ、その他の要素はシンプルにまとめています。<br>
            1パターン目は、外観デザインを3つ並べることで、ベースが四角でもさまざまなイメージの外観にできることを強調。<br>
            もう1パターンは、パースとキャッチコピーを大きく配置し、シンプルながらもインパクトのあるレイアウトに仕上げました。</p>
        </div>
      </div>
    </WorksDetail>
  </main>
  <Footer />
</Layout>

<style lang="scss">
  @use "../../../styles/variables" as *;
</style>