---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import WorksDetail from "../../../components/Works-detail.astro";
import "../../../styles/global.scss";
import "../../../styles/works.scss";
---

<Layout title="制作実績詳細 | Nachi web design" description="制作実績の詳細ページです。">
  <Header />
  <main>
    <WorksDetail>
      <!-- スライダー -->
      <div slot="slides" class="swiper-wrapper">
        <img src="/my-scrapbook/images/works/banner-11/img1.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/my-scrapbook/images/works/banner-11/img2.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/my-scrapbook/images/works/banner-11/img3.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/my-scrapbook/images/works/banner-11/img4.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/my-scrapbook/images/works/banner-11/img5.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
      </div>

      <!-- 情報 -->
      <div slot="text">
        <h1 class="works-detail__title">注文住宅 Web広告用バナー</h1>
        <div class="works-detail__tags">
          <!-- <p>Webデザイン</p> -->
          <!-- <p>LPデザイン</p> -->
          <!-- <p>コーディング</p> -->
          <p>バナー</p>
          <!-- <p>印刷物</p> -->
        </div>
        <div class="works-detail__description">
          <p>工務店のWeb広告用バナーを作成しました。<br>
          外観＋内観の複数枚で構成したパターンと、遷移先のメインビジュアルを1枚大きく配置したパターンの2種類を作成。<br>
          パースを際立たせるため、キャッチやあしらいはシンプルにまとめました。</p>
        </div>
      </div>
    </WorksDetail>
  </main>
  <Footer />
</Layout>

<style lang="scss">
  @use "../../../styles/variables" as *;
</style>