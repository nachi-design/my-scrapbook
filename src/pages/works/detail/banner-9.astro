---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import WorksDetail from "../../../components/Works-detail.astro";
import "../../../styles/global.scss";
import "../../../styles/works.scss";
import "../../../scripts/global.js";
---

<Layout title="制作実績詳細 | Nachi web design" description="制作実績の詳細ページです。">
  <Header />
  <main>
    <WorksDetail>
      <!-- スライダー -->
      <div slot="slides" class="swiper-wrapper">
        <img src="/images/works/banner-9/img3.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-9/img4.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-9/img1.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-9/img2.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-9/img5.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/images/works/banner-9/img6.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
      </div>

      <!-- 情報 -->
      <div slot="text">
        <h1 class="works-detail__title">注文住宅 Web広告用バナー</h1>
        <div class="works-detail__tags">
          <!-- <p>Webデザイン</p> -->
          <!-- <p>LPデザイン</p> -->
          <!-- <p>コーディング</p> -->
          <p>バナー</p>
          <!-- <p>印刷物</p> -->
        </div>
        <div class="works-detail__description">
          <p>工務店のWeb広告用バナーを作成しました。<br>
            高級感のあるパース画像に合わせ、最低限のあしらいでシンプルにまとめました。<br>
            画像を1枚にしたパターン、複数枚のパターン、外観とセットで見せるパターンなど、複数バリエーションを制作しました。
          </p>
        </div>
      </div>
    </WorksDetail>
  </main>
  <Footer />
</Layout>

<style lang="scss">
  @use "../../../styles/variables" as *;
</style>