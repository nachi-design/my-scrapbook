---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import WorksDetail from "../../../components/Works-detail.astro";
import "../../../styles/global.scss";
import "../../../styles/works.scss";
import "../../../scripts/global.js";
---

<Layout title="制作実績詳細 | Nachi web design" description="制作実績の詳細ページです。">
  <Header />
  <main>
    <WorksDetail>
      <!-- スライダー -->
      <div slot="slides" class="swiper-wrapper">
        <img src="/images/works/banner-5/img1.webp" class="swiper-slide" alt="リノベーション Web広告用バナー">
        <img src="/images/works/banner-5/img2.webp" class="swiper-slide" alt="リノベーション Web広告用バナー">
        <img src="/images/works/banner-5/img3.webp" class="swiper-slide" alt="リノベーション Web広告用バナー">
        <img src="/images/works/banner-5/img4.webp" class="swiper-slide" alt="リノベーション Web広告用バナー">
      </div>

      <!-- 情報 -->
      <div slot="text">
        <h1 class="works-detail__title">リノベーション Web広告用バナー</h1>
        <div class="works-detail__tags">
          <!-- <p>Webデザイン</p> -->
          <!-- <p>LPデザイン</p> -->
          <!-- <p>コーディング</p> -->
          <p>バナー</p>
          <!-- <p>印刷物</p> -->
        </div>
        <div class="works-detail__description">
          <p>リノベーション会社のWeb広告用バナーを作成しました。<br>
            高級層をターゲットとした商品のため、濃いグレーと英字のキャッチを組み合わせたシックな雰囲気のデザインにしました。<br>
            1パターンは英字のキャッチをメインに大きく配置して目を引くようにし、もう1パターンは事例写真をメインに、一目で施工イメージが伝わるようにしました。</p>
        </div>
      </div>
    </WorksDetail>
  </main>
  <Footer />
</Layout>

<style lang="scss">
  @use "../../../styles/variables" as *;
</style>