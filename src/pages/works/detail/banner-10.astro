---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import WorksDetail from "../../../components/Works-detail.astro";
import "../../../styles/global.scss";
import "../../../styles/works.scss";
---

<Layout title="制作実績詳細 | Nachi web design" description="制作実績の詳細ページです。">
  <Header />
  <main>
    <WorksDetail>
      <!-- スライダー -->
      <div slot="slides" class="swiper-wrapper">
        <img src="/my-scrapbook/images/works/banner-10/img1.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/my-scrapbook/images/works/banner-10/img2.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
        <img src="/my-scrapbook/images/works/banner-10/img3.webp" class="swiper-slide" alt="注文住宅 Web広告用バナー">
      </div>

      <!-- 情報 -->
      <div slot="text">
        <h1 class="works-detail__title">注文住宅 Web広告用バナー</h1>
        <div class="works-detail__tags">
          <!-- <p>Webデザイン</p> -->
          <!-- <p>LPデザイン</p> -->
          <!-- <p>コーディング</p> -->
          <p>バナー</p>
          <!-- <p>印刷物</p> -->
        </div>
        <div class="works-detail__description">
          <p>工務店（二世帯住宅向け商品）のWeb広告用バナーを作成しました。<br>
          遷移先のLPに合わせたトーンで作成しております。<br>
          事例写真をメインにしつつ、二世帯住宅の商品だと一目で分かるように家族のイラストを活用しました。</p>
        </div>
      </div>
    </WorksDetail>
  </main>
  <Footer />
</Layout>

<style lang="scss">
  @use "../../../styles/variables" as *;
</style>