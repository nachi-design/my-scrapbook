---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import WorksDetail from "../../../components/Works-detail.astro";
import "../../../styles/global.scss";
import "../../../styles/works.scss";
import "../../../scripts/global.js";
---

<Layout title="制作実績詳細 | Nachi web design" description="制作実績の詳細ページです。">
  <Header />
  <main>
    <WorksDetail>
      <!-- スライダー -->
      <div slot="slides" class="swiper-wrapper">
        <img src="/images/works/banner-1/img1.webp" class="swiper-slide" alt="ネイルスクール キャンペーンバナー">
        <img src="/images/works/banner-1/img2.webp" class="swiper-slide" alt="ネイルスクール キャンペーンバナー">
      </div>

      <!-- 情報 -->
      <div slot="text">
        <h1 class="works-detail__title">ネイルスクール キャンペーンバナー</h1>
        <div class="works-detail__tags">
          <!-- <p>Webデザイン</p> -->
          <!-- <p>LPデザイン</p> -->
          <!-- <p>コーディング</p> -->
          <p>バナー</p>
          <!-- <p>印刷物</p> -->
        </div>
        <div class="works-detail__description">
          <p>ネイルスクールのサイトに掲載する学割キャンペーンのバナーを制作しました。<br>
          10代後半から20代前半の女性をターゲットに、爽やかな配色でデザインし、「25%OFF」の特典がひと目で伝わるように強調しています。</p>
        </div>
      </div>
    </WorksDetail>
  </main>
  <Footer />
</Layout>

<style lang="scss">
  @use "../../../styles/variables" as *;
</style>