---
import logo from "../assets/logo-web.svg";
---

<header class="header">
  <div class="header__wrapper">
    <div class="header__logo">
      <a href="/"><img src={logo.src} alt=""></a>
      <p class="header__desc">The Portfolio Site of<br />Web Designer misuzu</p>
    </div>

    <nav class="nav">
      <ul class="nav__list">
        <li class="nav__item"><a href="/works" class="nav__link">WORKS</a></li>
        <li class="nav__item"><a href="/contact" class="nav__link">CONTACT</a></li>
        <li class="nav__item">
          <a href="https://www.instagram.com/nachichi_illustration?igsh=MXNkaDZ2djcwa2NzMg%3D%3D&utm_source=qr" target="_blank" class="nav__icon"><i class="fa-brands fa-instagram"></i></a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style lang="scss">
  @use "../styles/variables" as *;

  .header {
    border-bottom: solid 1px $black;

    &__wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 45px 2vw;

      @include mq-max() {
        padding: 30px 2vw;
      }

      @include mq-max(sm) {
        padding: 20px 3vw;
      }
    }

    &__logo {
      img {
        width: 140px;
      }

      @include mq-max(sm) {
        img {
          width: 100px;
        }
      }
    }

    &__desc {
      font-size: 1.2rem;
      margin-top: 40px;

      @include mq-max() {
        margin-top: 20px;
      }

      @include mq-max(sm) {
        display: none;
      }
    }
  }

  .nav {
    &__list {
      display: flex;
      gap: 1.5rem;
      align-items: center;
    }

    &__link {
      position: relative;

      &::after {
        opacity: 0;
        content: '';
        background: $black;
        width: 100%;
        height: 1px;
        display: block;
        position: absolute;
        bottom: -8px;
        @include transition;
      }

      &:hover {

        &::after {
          opacity: 1;
          bottom: -3px;
        }
      }
    }

    &__icon {
      background: $yellow-green;
      width: 35px;
      height: 35px;
      border-radius: 50px;
      display: flex;
      justify-content: center;
      align-items: center;

      i {
        font-size: 1.6rem;
      }
    }
  }
</style>
